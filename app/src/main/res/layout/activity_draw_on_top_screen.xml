<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.DrawOnTopScreenActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="Phone blocked by MindMaster"
        android:layout_gravity="center"
        tools:ignore="HardcodedText,SpUsage" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/splash" />

    <TextView
        android:id="@+id/timing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Until : 12:00 PM"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        tools:ignore="HardcodedText,SpUsage" />

    <LinearLayout
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/call_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/call_icon_white"
            android:scaleType="centerCrop"
            android:padding="20dp"
            android:background="@drawable/break_btn_theme"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/pause_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/stop_icon_white"
            android:scaleType="centerCrop"
            android:padding="20dp"
            android:background="@drawable/break_btn_theme"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>