<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,SpUsage,ContentDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play_icon_blue" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Blocking Level"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/strict_level_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/main_stats_theme"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="22dp"
                        android:text="Level 1"
                        android:textColor="@color/pink"
                        android:textSize="22dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="22dp"
                        android:src="@drawable/goto_icon_blue" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="- Restrict access to MindMaster"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/strict_level_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/main_stats_theme"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="22dp"
                        android:text="Level 2"
                        android:textColor="@color/pink"
                        android:textSize="22dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="22dp"
                        android:src="@drawable/goto_icon_blue" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="- Restrict access to MindMaster"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="- Restrict profile editing"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/strict_level_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/main_stats_theme"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="22dp"
                        android:text="Level 3"
                        android:textColor="@color/pink"
                        android:textSize="22dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="22dp"
                        android:src="@drawable/goto_icon_blue" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="- Restrict access to MindMaster"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="- Restrict profile editing"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="- Uninstall protection"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/strict_level_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/main_stats_theme"
                android:elevation="2dp"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="22dp"
                        android:text="Level 4"
                        android:textColor="@color/pink"
                        android:textSize="22dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center|end"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="22dp"
                        android:src="@drawable/goto_icon_blue" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="- Restrict access to MindMaster"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="- Block profile editing"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="- Uninstall Protection"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="- Block access to device settings"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="22dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.cardview.widget.CardView>